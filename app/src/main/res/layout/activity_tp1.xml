        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="28dp" />

        <Button
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
